#!/bin/bash

/mnt/sudo/setup.sh
/mnt/sudo/setup-tutorial.sh

# Setup the tutorial environment
chmod +x /challenge/submit

mkdir -p /challenge/fish-tank

touch /challenge/fish-tank/.secret-fish
mkdir -p /challenge/fish-tank/stones
touch /challenge/fish-tank/stones/stone1
touch /challenge/fish-tank/stones/stone2
