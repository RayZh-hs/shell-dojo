chown -R hacker:hacker /challenge/fish-tank
chmod -R 775 /challenge/fish-tank

chmod 664 /challenge/fish-tank/.secret-fish
chmod 664 /challenge/fish-tank/stones/stone1
chmod 664 /challenge/fish-tank/stones/stone2
chmod 664 /challenge/fish-tank/stones/stone3